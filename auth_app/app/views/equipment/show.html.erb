<div class="content-header">
  <h1 class="page-title">Detalhes do Equipamento</h1>
</div>

<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="font-size: 20px; font-weight: 600; color: #1f2937;">
      <div style="display: flex; align-items: center; gap: 12px;">
        <div style="width: 16px; height: 16px; border-radius: 50%; background-color: <%= @equipment.category.color %>;"></div>
        <%= @equipment.display_name %>
      </div>
    </h2>
    <div style="display: flex; gap: 8px;">
      <%= link_to "Editar", edit_equipment_path(@equipment), class: "btn btn-secondary" %>
      <%= link_to "Voltar", equipment_index_path, class: "btn btn-outline" %>
    </div>
  </div>

  <div class="equipment-details">
    <div class="detail-row">
      <div class="detail-label">Categoria:</div>
      <div class="detail-value">
        <div style="display: flex; align-items: center; gap: 8px;">
          <div style="width: 16px; height: 16px; border-radius: 50%; background-color: <%= @equipment.category.color %>;"></div>
          <strong><%= @equipment.category.name %></strong>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Número:</div>
      <div class="detail-value"><strong><%= @equipment.number %></strong></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Status:</div>
      <div class="detail-value">
        <span class="badge <%= @equipment.status_badge_class %>">
          <%= @equipment.status %>
        </span>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Potência:</div>
      <div class="detail-value"><%= @equipment.power_display %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Tensão:</div>
      <div class="detail-value"><%= @equipment.voltage_display %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Localização:</div>
      <div class="detail-value"><%= @equipment.location %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Data de Criação:</div>
      <div class="detail-value"><%= @equipment.created_at.strftime("%d/%m/%Y às %H:%M") %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Última Atualização:</div>
      <div class="detail-value"><%= @equipment.updated_at.strftime("%d/%m/%Y às %H:%M") %></div>
    </div>
  </div>
</div>

<style>
.equipment-details {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.detail-row {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #e5e7eb;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-weight: 600;
  color: #374151;
  min-width: 150px;
  margin-right: 16px;
}

.detail-value {
  color: #1f2937;
  flex: 1;
}
</style>
