<div class="content-header">
  <h1 class="page-title">Detalhes da Categoria</h1>
</div>

<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="font-size: 20px; font-weight: 600; color: #1f2937;">
      <div style="display: flex; align-items: center; gap: 12px;">
        <div style="width: 16px; height: 16px; border-radius: 50%; background-color: <%= @category.color %>;"></div>
        <%= @category.display_name %>
      </div>
    </h2>
    <div style="display: flex; gap: 8px;">
      <%= link_to "Editar", edit_category_path(@category), class: "btn btn-secondary" %>
      <%= link_to "Voltar", categories_path, class: "btn btn-outline" %>
    </div>
  </div>

  <div class="category-details">
    <div class="detail-row">
      <div class="detail-label">Nome:</div>
      <div class="detail-value"><strong><%= @category.name %></strong></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Descrição:</div>
      <div class="detail-value"><%= @category.description %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Cor:</div>
      <div class="detail-value">
        <div style="display: flex; align-items: center; gap: 8px;">
          <div style="width: 24px; height: 24px; border-radius: 4px; background-color: <%= @category.color %>; border: 1px solid #e5e7eb;"></div>
          <span style="font-family: monospace; font-size: 14px;"><%= @category.color %></span>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Quantidade de Equipamentos:</div>
      <div class="detail-value">
        <span class="badge badge-secondary">
          <%= @category.equipment_count %> equipamento<%= 's' if @category.equipment_count != 1 %>
        </span>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Data de Criação:</div>
      <div class="detail-value"><%= @category.created_at.strftime("%d/%m/%Y às %H:%M") %></div>
    </div>

    <div class="detail-row">
      <div class="detail-label">Última Atualização:</div>
      <div class="detail-value"><%= @category.updated_at.strftime("%d/%m/%Y às %H:%M") %></div>
    </div>
  </div>

  <% if @category.equipment.any? %>
    <div style="margin-top: 32px;">
      <h3 style="font-size: 18px; font-weight: 600; color: #1f2937; margin-bottom: 16px;">Equipamentos desta Categoria</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Número</th>
            <th>Status</th>
            <th>Potência</th>
            <th>Tensão</th>
            <th>Localização</th>
          </tr>
        </thead>
        <tbody>
          <% @category.equipment.each do |equipment| %>
            <tr>
              <td><strong><%= equipment.number %></strong></td>
              <td>
                <span class="badge <%= equipment.status_badge_class %>">
                  <%= equipment.status %>
                </span>
              </td>
              <td><%= equipment.power_display %></td>
              <td><%= equipment.voltage_display %></td>
              <td><%= equipment.location %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<style>
.category-details {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.detail-row {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #e5e7eb;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-weight: 600;
  color: #374151;
  min-width: 200px;
  margin-right: 16px;
}

.detail-value {
  color: #1f2937;
  flex: 1;
}
</style>
