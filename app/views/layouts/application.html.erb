    <script>
      // Modal functionality
      function openModal(modalId) {
        document.getElementById(modalId).classList.add('show');
      }

      function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('show');
      }

      // Close modal when clicking outside
      document.addEventListener('click', function(e) {
        if (e.target.classList.contains('modal-overlay')) {
          e.target.classList.remove('show');
        }
      });

      // Toggle Equipment Menu
      function toggleEquipmentMenu(event) {
        event.stopPropagation();
        const equipmentMenu = event.currentTarget.closest('.equipment-menu');
        if (equipmentMenu) {
          equipmentMenu.classList.toggle('expanded');
          
          // Salvar estado no localStorage para persistir entre navega√ß√µes
          const isExpanded = equipmentMenu.classList.contains('expanded');
          localStorage.setItem('equipmentMenuExpanded', isExpanded);
        }
      }

      // Toggle Financial Menu
      function toggleFinancialMenu(event) {
        event.stopPropagation();
        const financialMenu = event.currentTarget.closest('.financial-menu');
        if (financialMenu) {
          financialMenu.classList.toggle('expanded');
          
          // Salvar estado no localStorage para persistir entre navega√ß√µes
          const isExpanded = financialMenu.classList.contains('expanded');
          localStorage.setItem('financialMenuExpanded', isExpanded);
        }
      }

      // Restaurar estado dos menus ao carregar a p√°gina
      document.addEventListener('DOMContentLoaded', function() {
        // Restaurar menu de equipamentos
        const equipmentMenu = document.querySelector('.equipment-menu');
        if (equipmentMenu) {
          const isExpanded = localStorage.getItem('equipmentMenuExpanded') === 'true';
          if (isExpanded) {
            equipmentMenu.classList.add('expanded');
          }
        }

        // Restaurar menu financeiro
        const financialMenu = document.querySelector('.financial-menu');
        if (financialMenu) {
          const isExpanded = localStorage.getItem('financialMenuExpanded') === 'true';
          if (isExpanded) {
            financialMenu.classList.add('expanded');
          }
        }
      });

      // Add contact functionality
      function addContact() {
        const contactContainer = document.getElementById('contacts-container');
        const contactIndex = contactContainer.children.length;
        const contactHtml = `
          <div class="contact-item">
            <button type="button" class="contact-remove" onclick="removeContact(this)">√ó</button>
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">Nome</label>
                <input type="text" name="client[contacts_attributes][${contactIndex}][name]" class="form-control" required>
              </div>
              <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" name="client[contacts_attributes][${contactIndex}][email]" class="form-control" required>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label class="form-label">Telefone</label>
                <input type="tel" name="client[contacts_attributes][${contactIndex}][phone]" class="form-control" required>
              </div>
              <div class="form-group">
                <label class="form-label">Cargo</label>
                <input type="text" name="client[contacts_attributes][${contactIndex}][position]" class="form-control" required>
              </div>
            </div>
          </div>
        `;
        contactContainer.insertAdjacentHTML('beforeend', contactHtml);
      }

      function removeContact(button) {
        button.closest('.contact-item').remove();
      }
    </script>
  </body>
