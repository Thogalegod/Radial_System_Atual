        padding: 20px 24px;
        border-top: 1px solid #e5e7eb;
        display: flex;
        justify-content: flex-end;
        gap: 12px;
      }

      .btn-icon {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        color: #6b7280;
        padding: 4px;
        border-radius: 4px;
        transition: all 0.2s;
      }

      .btn-icon:hover {
        background: #f3f4f6;
        color: #374151;
      }

      /* Contact Section */
      .contact-section {
        margin-top: 24px;
        padding-top: 24px;
        border-top: 1px solid #e5e7eb;
      }

      .contact-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
      }

      .contact-title {
        font-size: 16px;
        font-weight: 600;
        color: #1f2937;
      }

      .contact-item {
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 12px;
        position: relative;
      }

      .contact-remove {
        position: absolute;
        top: 8px;
        right: 8px;
        background: #ef4444;
        color: white;
        border: none;
        border-radius: 4px;
        width: 24px;
        height: 24px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
      }

      /* Contact Display */
      .contact-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .contact-name {
        font-weight: 600;
        color: #1f2937;
      }

      .contact-details {
        color: #6b7280;
        font-size: 14px;
      }

      .contact-indicator {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        background: #eff6ff;
        color: #1d4ed8;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
        margin-top: 4px;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-100%);
          transition: transform 0.3s;
        }

        .sidebar.open {
          transform: translateX(0);
        }

        .main-content {
          margin-left: 0;
        }

        .form-row {
          grid-template-columns: 1fr;
        }

        .modal {
          width: 95%;
          margin: 20px;
        }
      }
    </style>
