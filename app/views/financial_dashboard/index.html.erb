<script>
document.addEventListener('DOMContentLoaded', function() {
  // Gráfico de Fluxo de Caixa
  const cashFlowCtx = document.getElementById('cashFlowChart').getContext('2d');
  new Chart(cashFlowCtx, {
    type: 'line',
    data: {
      labels: <%= raw @chart_data[:daily_cash_flow].keys.map { |date| date.strftime('%d/%m') } %>,
      datasets: [{
        label: 'Recebimentos',
        data: <%= raw @chart_data[:daily_cash_flow].values %>,
        borderColor: '#3b82f6',
        backgroundColor: 'rgba(59, 130, 246, 0.1)',
        tension: 0.4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return 'R$ ' + value.toLocaleString('pt-BR');
            }
          }
        }
      }
    }
  });

  // Gráfico de Status
  const statusCtx = document.getElementById('statusChart').getContext('2d');
  new Chart(statusCtx, {
    type: 'doughnut',
    data: {
      labels: ['Pago', 'Pendente', 'Vencido'],
      datasets: [{
        data: [
          <%= @chart_data[:receivables_by_status]['paid'] || 0 %>,
          <%= @chart_data[:receivables_by_status]['pending'] || 0 %>,
          <%= @chart_data[:receivables_by_status]['overdue'] || 0 %>
        ],
        backgroundColor: ['#10b981', '#f59e0b', '#ef4444']
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom'
        }
      }
    }
  });
});
</script>
