<div class="financial-dashboard">
  <!-- Header com Seletor de Mês -->
  <div class="dashboard-header">
    <div class="header-content">
      <h1 class="dashboard-title">
        <i class="fas fa-chart-line"></i>
        Dashboard Financeiro
      </h1>
      <div class="month-selector">
        <%= link_to "< #{@selected_month.prev_month.strftime('%B/%Y')}", 
            financial_dashboard_index_path(month: @selected_month.prev_month.strftime('%Y-%m')), 
            class: "month-nav" %>
        <span class="current-month"><%= @selected_month.strftime('%B/%Y') %></span>
        <%= link_to "#{@selected_month.next_month.strftime('%B/%Y')} >", 
            financial_dashboard_index_path(month: @selected_month.next_month.strftime('%Y-%m')), 
            class: "month-nav" %>
      </div>
    </div>
  </div>

  <!-- Alertas e Notificações -->
  <% if @alerts.any? %>
    <div class="alerts-section">
      <% @alerts.each do |alert| %>
        <div class="alert alert-<%= alert[:type] %> alert-dismissible">
          <div class="alert-content">
            <div class="alert-icon">
              <i class="fas fa-<%= alert[:type] == 'warning' ? 'exclamation-triangle' : 'exclamation-circle' %>"></i>
            </div>
            <div class="alert-body">
              <h4><%= alert[:title] %></h4>
              <p><%= alert[:message] %></p>
              <% if alert[:amount] %>
                <span class="alert-amount"><%= number_to_currency(alert[:amount]) %></span>
              <% end %>
            </div>
            <div class="alert-actions">
              <%= link_to "Ver Detalhes", alert[:link], class: "btn btn-sm btn-outline-#{alert[:type]}" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- KPIs Principais -->
  <div class="kpis-grid">
    <div class="kpi-card primary">
      <div class="kpi-icon">
        <i class="fas fa-arrow-up"></i>
      </div>
      <div class="kpi-content">
        <h3 class="kpi-value"><%= number_to_currency(@kpis[:total_receivables]) %></h3>
        <p class="kpi-label">Recebimentos Totais</p>
        <div class="kpi-progress">
          <div class="progress-bar" style="width: <%= @kpis[:collection_rate] %>%"></div>
        </div>
        <small class="kpi-subtitle"><%= @kpis[:collection_rate].round(1) %>% recebido</small>
      </div>
    </div>

    <div class="kpi-card secondary">
      <div class="kpi-icon">
        <i class="fas fa-arrow-down"></i>
      </div>
      <div class="kpi-content">
        <h3 class="kpi-value"><%= number_to_currency(@kpis[:total_payables]) %></h3>
        <p class="kpi-label">Despesas Totais</p>
        <div class="kpi-progress">
          <div class="progress-bar" style="width: <%= (@kpis[:paid_payables] / @kpis[:total_payables] * 100).round(1) %>%"></div>
        </div>
        <small class="kpi-subtitle"><%= (@kpis[:paid_payables] / @kpis[:total_payables] * 100).round(1) %>% pago</small>
      </div>
    </div>

    <div class="kpi-card success">
      <div class="kpi-icon">
        <i class="fas fa-cash-register"></i>
      </div>
      <div class="kpi-content">
        <h3 class="kpi-value"><%= number_to_currency(@kpis[:net_cash_flow]) %></h3>
        <p class="kpi-label">Fluxo de Caixa Líquido</p>
        <div class="kpi-trend <%= @kpis[:net_cash_flow] >= 0 ? 'positive' : 'negative' %>">
          <i class="fas fa-<%= @kpis[:net_cash_flow] >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
          <span><%= @kpis[:net_cash_flow] >= 0 ? 'Positivo' : 'Negativo' %></span>
        </div>
      </div>
    </div>

    <div class="kpi-card warning">
      <div class="kpi-icon">
        <i class="fas fa-clock"></i>
      </div>
      <div class="kpi-content">
        <h3 class="kpi-value"><%= @kpis[:days_sales_outstanding] %></h3>
        <p class="kpi-label">Dias de Vendas Pendentes</p>
        <div class="kpi-status">
          <span class="status-badge <%= @kpis[:days_sales_outstanding] <= 30 ? 'success' : 'warning' %>">
            <%= @kpis[:days_sales_outstanding] <= 30 ? 'Bom' : 'Atenção' %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Gráficos e Análises -->
  <div class="charts-grid">
    <div class="chart-card">
      <div class="chart-header">
        <h3>Fluxo de Caixa Diário</h3>
        <div class="chart-legend">
          <span class="legend-item">
            <span class="legend-color receivables"></span>
            Recebimentos
          </span>
          <span class="legend-item">
            <span class="legend-color payables"></span>
            Despesas
          </span>
        </div>
      </div>
      <div class="chart-container">
        <canvas id="cashFlowChart" width="400" height="200"></canvas>
      </div>
    </div>

    <div class="chart-card">
      <div class="chart-header">
        <h3>Status dos Lançamentos</h3>
      </div>
      <div class="chart-container">
        <canvas id="statusChart" width="400" height="200"></canvas>
      </div>
    </div>
  </div>

  <!-- Tabelas de Dados -->
  <div class="data-grid">
    <div class="data-card">
      <div class="card-header">
        <h3>Top Clientes</h3>
        <%= link_to "Ver Todos", clients_path, class: "btn btn-sm btn-outline" %>
      </div>
      <div class="data-table">
        <% if @top_clients.any? %>
          <% @top_clients.each_with_index do |(client, amount), index| %>
            <div class="table-row">
              <div class="row-number"><%= index + 1 %></div>
              <div class="client-info">
                <h4><%= client.name %></h4>
                <small><%= client.email %></small>
              </div>
              <div class="amount-info">
                <span class="amount"><%= number_to_currency(amount) %></span>
                <small class="percentage"><%= ((amount / @kpis[:total_receivables]) * 100).round(1) %>%</small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state">
            <i class="fas fa-users"></i>
            <p>Nenhum cliente com recebimentos este mês</p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="data-card">
      <div class="card-header">
        <h3>Lançamentos Vencidos</h3>
        <%= link_to "Ver Todos", financial_entries_path(overdue: true), class: "btn btn-sm btn-outline" %>
      </div>
      <div class="data-table">
        <% if @overdue_entries.any? %>
          <% @overdue_entries.each do |entry| %>
            <div class="table-row overdue">
              <div class="entry-info">
                <h4><%= entry.description.truncate(30) %></h4>
                <small><%= entry.formatted_due_date %></small>
              </div>
              <div class="amount-info">
                <span class="amount"><%= number_to_currency(entry.amount) %></span>
                <small class="days-overdue"><%= entry.days_overdue %> dias vencido</small>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state">
            <i class="fas fa-check-circle"></i>
            <p>Nenhum lançamento vencido</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Projeções -->
  <div class="projections-section">
    <div class="projection-card">
      <div class="projection-header">
        <h3>Projeções Financeiras</h3>
        <div class="confidence-level">
          <span class="confidence-badge <%= @projections[:confidence_level] %>">
            <%= @projections[:confidence_level].titleize %> Confiança
          </span>
        </div>
      </div>
      <div class="projection-content">
        <div class="projection-item">
          <label>Próximo Mês (Projeção)</label>
          <span class="projection-value"><%= number_to_currency(@projections[:next_month_projection]) %></span>
        </div>
        <div class="projection-item">
          <label>Tendência</label>
          <span class="trend-badge <%= @projections[:trend] %>">
            <i class="fas fa-<%= @projections[:trend] == 'increasing' ? 'arrow-up' : @projections[:trend] == 'decreasing' ? 'arrow-down' : 'minus' %>"></i>
            <%= @projections[:trend].titleize %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

