<div class="content-header">
  <h1 class="page-title">Nova Tensão Secundária</h1>
</div>

<div class="card">
  <%= form_with model: @bt_option, local: true do |form| %>
    <% if @bt_option.errors.any? %>
      <div class="alert alert-danger">
        <h4>Erro ao salvar:</h4>
        <ul>
          <% @bt_option.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :value, 'Valor (V)', class: 'form-label' %>
      <%= form.number_field :value, class: 'form-control', min: 1, required: true %>
    </div>

    <div style="margin-top: 24px; display: flex; gap: 12px;">
      <%= form.submit 'Salvar', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', bt_options_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
