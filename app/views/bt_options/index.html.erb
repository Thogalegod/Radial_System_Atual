<div class="content-header">
  <div style="margin-bottom: 8px;">
    <a href="<%= medium_voltage_transformers_path %>" style="color: #6b7280; text-decoration: none;">← Voltar para Transformador MT</a>
  </div>
  <h1 class="page-title">Categorias de Tensão Secundária</h1>
  <p class="page-subtitle">Gerenciar categorias de tensão para Transformadores MT</p>
</div>

<div class="card">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
    <h2 style="font-size: 20px; font-weight: 600; color: #1f2937;">Opções de Tensão Secundária (V)</h2>
    <%= link_to 'Adicionar Tensão', new_bt_option_path, class: 'btn btn-primary' %>
  </div>

  <% if @bt_options.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Valor (V)</th>
          <th>Cor</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @bt_options.each do |option| %>
          <tr>
            <td><strong><%= option.value %></strong></td>
            <td>
              <span style="display: inline-block; padding: 6px 16px; border-radius: 8px; background: <%= option.color %>; color: #fff; font-weight: 600;">
                <%= option.value %> V
              </span>
            </td>
            <td>
              <div style="display: flex; gap: 8px;">
                <%= link_to edit_bt_option_path(option), class: 'btn btn-secondary btn-icon', title: 'Editar' do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                    <path d="m18.5 2.5 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                  </svg>
                <% end %>
                <%= link_to bt_option_path(option), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-icon', title: 'Excluir' do %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="3,6 5,6 21,6"/>
                    <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"/>
                    <line x1="10" y1="11" x2="10" y2="17"/>
                    <line x1="14" y1="11" x2="14" y2="17"/>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div style="text-align: center; padding: 48px 24px; color: #6b7280;">
      <div style="font-size: 48px; margin-bottom: 16px;">⚡</div>
      <h3 style="font-size: 18px; font-weight: 600; margin-bottom: 8px;">Nenhuma tensão secundária cadastrada</h3>
      <p style="margin-bottom: 24px;">Comece cadastrando sua primeira opção de tensão secundária</p>
      <%= link_to 'Adicionar Tensão', new_bt_option_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
