<div class="content-header">
  <div style="margin-bottom: 8px;">
    <a href="<%= locations_path %>" style="color: #6b7280; text-decoration: none;">← Voltar para Localizações</a>
  </div>
  <h1 class="page-title">Nova Localização</h1>
  <p class="page-subtitle">Adicionar nova localização para Transformadores MT</p>
</div>

<div class="card">
  <%= form_with model: @location, local: true do |form| %>
    <% if @location.errors.any? %>
      <div class="alert alert-danger">
        <h4>Erro ao salvar localização:</h4>
        <ul>
          <% @location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :value, 'Nome da Localização', class: 'form-label' %>
      <%= form.text_field :value, class: 'form-control', required: true, placeholder: 'Ex: Galpão A, Depósito Central, Escritório' %>
      <small class="form-text">Digite o nome da localização (ex: Galpão A, Depósito Central)</small>
    </div>

    <div class="form-actions">
      <%= form.submit 'Salvar Localização', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', locations_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
