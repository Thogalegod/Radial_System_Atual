<div class="content-header">
  <div class="header-content">
    <h1>Locações</h1>
    <div class="header-actions">
      <%= link_to new_rental_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus"></i> Nova Locação
      <% end %>
    </div>
  </div>
</div>

<div class="content-body">
  <% if @rentals.any? %>
    <div class="cards-grid">
      <% @rentals.each do |rental| %>
        <div class="card rental-card">
          <div class="card-header">
            <div class="card-title">
              <h3><%= rental.name %></h3>
              <span class="status-badge status-<%= rental.status %>">
                <%= rental.status.humanize %>
              </span>
            </div>
            <div class="card-actions">
              <%= link_to rental_path(rental), class: "btn btn-sm btn-outline" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_rental_path(rental), class: "btn btn-sm btn-outline" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= button_to rental_path(rental), 
                  method: :delete, 
                  data: { 
                    confirm: 'Tem certeza que deseja excluir esta locação?',
                    turbo_method: :delete
                  },
                  class: "btn btn-sm btn-danger",
                  form: { style: 'display: inline;' },
                  onclick: "return confirmDelete(event, 'Tem certeza que deseja excluir esta locação?')" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </div>
          
          <div class="card-body">
            <div class="info-grid">
              <div class="info-item">
                <label>Cliente:</label>
                <span><%= rental.client.name %></span>
              </div>
              
              <div class="info-item">
                <label>Data de Início:</label>
                <span><%= rental.start_date.strftime("%d/%m/%Y") %></span>
              </div>
              
              <div class="info-item">
                <label>Data de Fim:</label>
                <span><%= rental.end_date.strftime("%d/%m/%Y") %></span>
              </div>
              
              <div class="info-item">
                <label>Duração:</label>
                <span><%= pluralize(rental.duration_days, 'dia') %></span>
              </div>
            </div>
          </div>
          
          <div class="card-footer">
            <small class="text-muted">
              Criado em <%= rental.created_at.strftime("%d/%m/%Y às %H:%M") %>
            </small>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-icon">
        <i class="fas fa-calendar-alt"></i>
      </div>
      <h3>Nenhuma locação encontrada</h3>
      <p>Comece criando sua primeira locação.</p>
      <%= link_to new_rental_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus"></i> Criar Primeira Locação
      <% end %>
    </div>
  <% end %>
</div>

<style>
