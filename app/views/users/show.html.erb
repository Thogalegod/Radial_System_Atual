<h1>Dashboard</h1>

<p>Bem-vindo, <strong><%= @user.name %></strong>!</p>
<p>Email: <%= @user.email %></p>

<%= form_with url: logout_path, method: :delete, local: true, html: { onsubmit: "return confirmLogout()" } do %>
  <%= submit_tag 'Sair', class: 'btn btn-danger' %>
<% end %>

<script>
function confirmLogout() {
  return confirm('Tem certeza que deseja sair do sistema?');
}
</script>
