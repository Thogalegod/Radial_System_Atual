<div class="container">
  <div class="page-header">
    <div class="header-content">
      <div class="header-left">
        <h1>Detalhes do Período de Faturamento</h1>
        <p class="subtitle">Locação: <%= @rental.display_name %></p>
      </div>
      <div class="header-actions">
        <%= link_to rental_rental_billing_periods_path(@rental), class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left"></i>
          Voltar para Períodos
        <% end %>
        <%= link_to edit_rental_rental_billing_period_path(@rental, @billing_period), class: "btn btn-primary" do %>
          <i class="fas fa-edit"></i>
          Editar
        <% end %>
      </div>
    </div>
  </div>

  <!-- Informações da Locação -->
  <div class="rental-info">
    <div class="info-card">
      <h3>Informações da Locação</h3>
      <div class="info-grid">
        <div class="info-item">
          <label>Status da Locação:</label>
          <span class="status-badge status-<%= @rental.status %>">
            <%= @rental.status.titleize %>
          </span>
        </div>
        <div class="info-item">
          <label>Equipamentos:</label>
          <span><%= @rental.equipment_count %> <%= 'equipamento'.pluralize(@rental.equipment_count) %></span>
        </div>
        <div class="info-item">
          <label>Períodos Existentes:</label>
          <span><%= @rental.billing_periods_count %> <%= 'período'.pluralize(@rental.billing_periods_count) %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Detalhes do Período -->
  <div class="detail-section">
    <div class="detail-card">
      <h3>Dados do Período</h3>
      
      <div class="detail-grid">
        <div class="detail-item">
          <label>Nome do Período:</label>
          <span class="detail-value"><%= @billing_period.name %></span>
        </div>
        
        <div class="detail-item">
          <label>Data de Início:</label>
          <span class="detail-value"><%= @billing_period.start_date.strftime('%d/%m/%Y') if @billing_period.start_date %></span>
        </div>
        
        <div class="detail-item">
          <label>Data de Fim:</label>
          <span class="detail-value"><%= @billing_period.end_date.strftime('%d/%m/%Y') if @billing_period.end_date %></span>
        </div>
        
        <div class="detail-item">
          <label>Valor do Período:</label>
          <span class="detail-value amount-value">
            <%= number_to_currency(@billing_period.amount) %>
          </span>
        </div>
        
        <% if @billing_period.client_order.present? %>
          <div class="detail-item">
            <label>Pedido do Cliente:</label>
            <span class="detail-value"><%= @billing_period.client_order %></span>
          </div>
        <% end %>
        
        <% if @billing_period.observations.present? %>
          <div class="detail-item full-width">
            <label>Observações:</label>
            <span class="detail-value"><%= @billing_period.observations %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Informações do Lançamento Financeiro -->
  <div class="financial-section">
    <div class="financial-card">
      <h3>Lançamento Financeiro</h3>
      
      <% if @billing_period.has_financial_entry? %>
        <div class="financial-info">
          <div class="info-item">
            <label>Status:</label>
            <span class="status-badge status-<%= @billing_period.financial_entry.status %>">
              <%= @billing_period.financial_entry.status_display %>
            </span>
          </div>
          <div class="info-item">
            <label>Data de Vencimento:</label>
            <span><%= @billing_period.financial_entry.formatted_due_date %></span>
          </div>
          <div class="info-item">
            <label>Data de Pagamento:</label>
            <% if @billing_period.financial_entry.has_paid_date? %>
              <span class="paid-date"><%= @billing_period.financial_entry.formatted_paid_date %></span>
              <% if @billing_period.financial_entry.was_paid_on_time? %>
                <span class="payment-status on-time">
                  <i class="fas fa-check-circle"></i>
                  Pago no prazo
                </span>
              <% else %>
                <span class="payment-status <%= @billing_period.financial_entry.days_to_pay > 0 ? 'late' : 'early' %>">
                  <i class="fas fa-clock"></i>
                  <%= pluralize(@billing_period.financial_entry.days_to_pay.abs, 'dia') %> <%= @billing_period.financial_entry.days_to_pay > 0 ? 'atrasado' : 'antecipado' %>
                </span>
              <% end %>
            <% else %>
              <span class="not-paid">Não pago</span>
            <% end %>
          </div>
          <div class="info-item">
            <label>Valor:</label>
            <span class="amount-value"><%= number_to_currency(@billing_period.financial_entry.amount) %></span>
          </div>
        </div>
        
        <div class="financial-actions">
          <%= link_to financial_entries_path(reference_type: 'RentalBillingPeriod', reference_id: @billing_period.id), class: "btn btn-outline-success" do %>
            <i class="fas fa-money-bill"></i>
            Ver Lançamento
          <% end %>
        </div>
      <% else %>
        <div class="no-financial-entry">
          <p class="text-muted">Nenhum lançamento financeiro gerado para este período.</p>
          <%= button_to regenerate_financial_entry_rental_rental_billing_period_path(@rental, @billing_period),
              turbo_method: :post,
              data: { confirm: 'Gerar lançamento financeiro para este período?' },
              class: "btn btn-outline-warning",
              form: { style: 'display: inline;' } do %>
            <i class="fas fa-plus"></i>
            Gerar Lançamento
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Ações -->
  <div class="actions-section">
    <div class="actions-card">
      <h3>Ações</h3>
      
      <div class="actions-grid">
        <%= link_to receipt_rental_rental_billing_period_path(@rental, @billing_period), class: "btn btn-outline-info", target: "_blank" do %>
          <i class="fas fa-file-alt"></i>
          Visualizar Recibo
        <% end %>
        
        <%= link_to receipt_pdf_rental_rental_billing_period_path(@rental, @billing_period), class: "btn btn-outline-primary" do %>
          <i class="fas fa-download"></i>
          Baixar PDF
        <% end %>
        
        <%= button_to rental_rental_billing_period_path(@rental, @billing_period),
            method: :delete,
            data: { confirm: 'Tem certeza que deseja excluir este período?' },
            class: "btn btn-outline-danger",
            form: { style: 'display: inline;', onsubmit: "return confirm('Tem certeza que deseja excluir este período?')" } do %>
          <i class="fas fa-trash"></i>
          Excluir Período
        <% end %>
      </div>
    </div>
  </div>
</div>

