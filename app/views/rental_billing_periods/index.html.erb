<div class="container">
  <div class="page-header">
    <div class="header-content">
      <div class="header-left">
        <h1>Períodos de Faturamento</h1>
        <p class="subtitle">Locação: <%= @rental.display_name %></p>
      </div>
      <div class="header-actions">
        <%= link_to rentals_path, class: "btn btn-secondary" do %>
          <i class="fas fa-list"></i>
          Voltar para Locações
        <% end %>
        <%= link_to rental_path(@rental), class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left"></i>
          Voltar para Detalhes da Locação
        <% end %>
        <%= link_to new_rental_rental_billing_period_path(@rental), class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i>
          Novo Período
        <% end %>
      </div>
    </div>
  </div>

  <!-- Resumo da Locação -->
  <div class="rental-summary">
    <div class="summary-card">
      <div class="summary-item">
        <label>Status:</label>
        <span class="status-badge status-<%= @rental.status %>">
          <%= @rental.status.titleize %>
        </span>
      </div>
      <div class="summary-item">
        <label>Equipamentos:</label>
        <span><%= @rental.equipment_count %> <%= 'equipamento'.pluralize(@rental.equipment_count) %></span>
      </div>
      <div class="summary-item">
        <label>Períodos:</label>
        <span><%= @rental.billing_periods_count %> <%= 'período'.pluralize(@rental.billing_periods_count) %></span>
      </div>
      <div class="summary-item">
        <label>Total Faturado:</label>
        <span class="total-amount"><%= @rental.formatted_total_amount %></span>
      </div>
    </div>
  </div>

  <!-- Lista de Períodos -->
  <div class="billing-periods-section">
    <div class="section-header">
      <h2>Períodos de Faturamento (<%= @billing_periods.count %>)</h2>
      <% if @billing_periods.empty? %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-calendar-alt"></i>
          </div>
          <h3>Nenhum período cadastrado</h3>
          <p>Adicione períodos de faturamento para esta locação.</p>
          <%= link_to new_rental_rental_billing_period_path(@rental), class: "btn btn-primary" do %>
            <i class="fas fa-plus"></i>
            Adicionar Primeiro Período
          <% end %>
        </div>
      <% else %>
        <div class="billing-periods-grid">
          <% @billing_periods.each do |period| %>
            <div class="billing-period-card">
              <div class="period-header">
                <h3><%= period.name %></h3>
                <div class="period-status">
                  <% if period.is_active? %>
                    <span class="status-badge status-active">Ativo</span>
                  <% elsif period.is_future? %>
                    <span class="status-badge status-future">Futuro</span>
                  <% else %>
                    <span class="status-badge status-past">Concluído</span>
                  <% end %>
                </div>
              </div>
              
              <div class="period-details">
                <div class="detail-item">
                  <label>Período:</label>
                  <span><%= period.start_date.strftime('%d/%m/%Y') %> - <%= period.end_date.strftime('%d/%m/%Y') %></span>
                </div>
                <div class="detail-item">
                  <label>Duração:</label>
                  <span><%= period.duration_days %> dias</span>
                </div>
                <div class="detail-item">
                  <label>Valor:</label>
                  <span class="amount"><%= period.formatted_amount %></span>
                </div>
                <% if period.has_client_order? %>
                  <div class="detail-item">
                    <label>Pedido:</label>
                    <span class="client-order"><%= period.client_order %></span>
                  </div>
                <% end %>
                <% if period.has_observations? %>
                  <div class="detail-item">
                    <label>Observações:</label>
                    <span class="observations"><%= period.observations %></span>
                  </div>
                <% end %>
              </div>
              
              <!-- Status do Pagamento -->
              <div class="payment-status-section">
                <h4>Status do Pagamento</h4>
                <% if period.has_financial_entry? %>
                  <% entry = period.financial_entry %>
                  <div class="payment-status-details">
                    <div class="payment-status-item">
                      <label>Status:</label>
                      <span class="payment-status-badge <%= entry.status %>">
                        <%= entry.status_display %>
                      </span>
                    </div>
                    
                    <div class="payment-status-item">
                      <label>Vencimento:</label>
                      <span><%= entry.formatted_due_date %></span>
                    </div>
                    
                    <% if entry.has_paid_date? %>
                      <div class="payment-status-item">
                        <label>Pagamento:</label>
                        <span class="paid-date"><%= entry.formatted_paid_date %></span>
                        <% if entry.was_paid_on_time? %>
                          <span class="payment-timing on-time">
                            <i class="fas fa-check-circle"></i>
                            No prazo
                          </span>
                        <% else %>
                          <span class="payment-timing <%= entry.days_to_pay > 0 ? 'late' : 'early' %>">
                            <i class="fas fa-clock"></i>
                            <%= pluralize(entry.days_to_pay.abs, 'dia') %> <%= entry.days_to_pay > 0 ? 'atrasado' : 'antecipado' %>
                          </span>
                        <% end %>
                      </div>
                    <% else %>
                      <div class="payment-status-item">
                        <label>Pagamento:</label>
                        <span class="not-paid">Não pago</span>
                        <% if entry.is_overdue? %>
                          <span class="payment-timing overdue">
                            <i class="fas fa-exclamation-triangle"></i>
                            Vencido há <%= entry.days_overdue %> dias
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="no-payment-info">
                    <span class="text-muted">Nenhum lançamento financeiro gerado</span>
                  </div>
                <% end %>
              </div>
              
              <div class="period-actions">
                <%= link_to edit_rental_rental_billing_period_path(@rental, period), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fas fa-edit"></i>
                  Editar
                <% end %>
                <%= link_to receipt_rental_rental_billing_period_path(@rental, period), class: "btn btn-sm btn-outline-info" do %>
                  <i class="fas fa-file-invoice"></i>
                  Gerar Recibo
                <% end %>
                <% if period.has_financial_entry? %>
                  <%= link_to financial_entries_path(reference_type: 'RentalBillingPeriod', reference_id: period.id), class: "btn btn-sm btn-outline-success" do %>
                    <i class="fas fa-money-bill"></i>
                    Ver Lançamento
                  <% end %>
                <% else %>
                  <%= button_to regenerate_financial_entry_rental_rental_billing_period_path(@rental, period),
                      turbo_method: :post,
                      data: { confirm: 'Gerar lançamento financeiro para este período?' },
                      class: "btn btn-sm btn-outline-warning",
                      form: { style: 'display: inline;' } do %>
                    <i class="fas fa-plus"></i>
                    Gerar Lançamento
                  <% end %>
                <% end %>
                <%= button_to rental_rental_billing_period_path(@rental, period),
                    method: :delete,
                    data: { confirm: 'Tem certeza que deseja excluir este período?' },
                    class: "btn btn-sm btn-outline-danger",
                    form: { style: 'display: inline;', onsubmit: "return confirm('Tem certeza que deseja excluir este período?')" } do %>
                  <i class="fas fa-trash"></i>
                  Excluir
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

