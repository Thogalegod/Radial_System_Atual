<div class="container">
  <div class="header">
    <div class="header-content">
      <h1>
        <i class="fas fa-edit"></i>
        Editar Tipo de Equipamento
      </h1>
      <div class="header-actions">
        <%= link_to equipment_type_path(@equipment_type), class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left" aria-hidden="true"></i>
          <span>Voltar</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-container">
    <%= form_with(model: @equipment_type, local: true, class: "form") do |form| %>
      <%= render 'shared/form_errors', object: @equipment_type %>

      <div class="form-grid">
        <div class="form-section">
          <h2><i class="fas fa-info-circle"></i> Informações Básicas</h2>
          
          <%= render 'shared/form_field', 
              form: form, 
              field: :name, 
              label: 'Nome do Tipo',
              placeholder: 'Ex: Transformador MT, Disjuntor, Religador',
              required: true %>

          <%= render 'shared/form_field', 
              form: form, 
              field: :color, 
              type: 'color',
              label: 'Cor de Identificação',
              help_text: 'Escolha uma cor para identificar este tipo de equipamento' %>

          <div class="form-group">
            <%= form.label :active, class: "form-label" do %>
              <i class="fas fa-toggle-on"></i>
              Status Ativo
            <% end %>
            <div class="checkbox-wrapper">
              <%= form.check_box :active, class: "form-checkbox" %>
              <label for="equipment_type_active" class="checkbox-label">
                Este tipo de equipamento está ativo e pode ser usado
              </label>
            </div>
            <small class="form-help">Tipos inativos não aparecem na criação de novos equipamentos</small>
          </div>
        </div>

        <div class="form-section">
          <h2><i class="fas fa-palette"></i> Visualização</h2>
          <div class="preview-card">
            <div class="preview-header" style="background-color: <%= @equipment_type.color %>;">
              <i class="fas fa-cog"></i>
              <span id="preview-name"><%= @equipment_type.name %></span>
            </div>
            <div class="preview-body">
              <div class="preview-stat">
                <span class="stat-number">0</span>
                <span class="stat-label">Equipamentos</span>
              </div>
              <div class="preview-stat">
                <span class="stat-number">0</span>
                <span class="stat-label">Características</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= form.submit "Salvar Alterações", class: "btn btn-primary" %>
        <%= link_to "Cancelar", equipment_type_path(@equipment_type), class: "btn btn-outline" %>
      </div>
    <% end %>
  </div>
</div>

<style>
.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 30px;
  border-radius: 12px;
  margin-bottom: 30px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20px;
}

.header h1 {
  margin: 0;
  font-size: 2.5rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 15px;
}

.header-actions {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.form-container {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  overflow: hidden;
  border: 1px solid #e1e5e9;
}

.form {
  padding: 30px;
}

.form-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 40px;
  margin-bottom: 30px;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.form-section h2 {
  margin: 0;
  font-size: 1.4rem;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
  gap: 10px;
  padding-bottom: 10px;
  border-bottom: 2px solid #e1e5e9;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-weight: 600;
  color: #2c3e50;
  font-size: 1rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

.form-input,
.form-textarea,
.form-select {
  padding: 12px 16px;
  border: 2px solid #e1e5e9;
  border-radius: 8px;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: white;
}

.form-input:focus,
.form-textarea:focus,
.form-select:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-input[type="color"] {
  width: 100%;
  height: 50px;
  padding: 8px;
  border-radius: 8px;
  cursor: pointer;
}

.form-help {
  color: #6c757d;
  font-size: 0.85rem;
  margin-top: 5px;
}

.checkbox-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #e1e5e9;
}

.form-checkbox {
  width: 20px;
  height: 20px;
  margin: 0;
  cursor: pointer;
}

.checkbox-label {
  font-size: 1rem;
  color: #2c3e50;
  cursor: pointer;
  line-height: 1.4;
}

.preview-card {
  background: #f8f9fa;
  border: 1px solid #e1e5e9;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.preview-header {
  padding: 20px;
  color: white;
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.2rem;
  font-weight: 600;
}

.preview-body {
  padding: 20px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.preview-stat {
  text-align: center;
  padding: 15px;
  background: white;
  border-radius: 8px;
  border: 1px solid #e1e5e9;
}

.stat-number {
  display: block;
  font-size: 1.8rem;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 0.85rem;
  color: #6c757d;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-actions {
  display: flex;
  gap: 15px;
  justify-content: flex-end;
  padding-top: 30px;
  border-top: 1px solid #e1e5e9;
}

.btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  border: none;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2px solid #667eea;
}

.btn-outline:hover {
  background: #667eea;
  color: white;
  transform: translateY(-2px);
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background: #5a6268;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .header-content {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .header h1 {
    font-size: 2rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
  
  .preview-body {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const nameInput = document.getElementById('equipment_type_name');
  const colorInput = document.getElementById('equipment_type_color');
  const previewName = document.getElementById('preview-name');
  const previewHeader = document.querySelector('.preview-header');
  
  if (nameInput) {
    nameInput.addEventListener('input', function() {
      previewName.textContent = this.value || 'Nome do Tipo';
    });
  }
  
  if (colorInput) {
    colorInput.addEventListener('input', function() {
      previewHeader.style.backgroundColor = this.value;
    });
  }
});
</script>
