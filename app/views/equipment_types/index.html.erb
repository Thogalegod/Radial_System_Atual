    padding: 1rem;
  }
  
  .page-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .equipment-types-grid {
    grid-template-columns: 1fr;
  }
  
  .card-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .card-stats {
    flex-direction: column;
    gap: 1rem;
  }
  
  .card-actions {
    justify-content: center;
  }
}
</style>
