<div class="equipment-types-page">
  <div class="page-header">
    <div class="header-content">
      <h1>Tipos de Equipamento</h1>
      <p>Gerencie os tipos de equipamento e suas caracter√≠sticas</p>
    </div>
    <div class="header-actions">
      <%= link_to new_equipment_type_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus"></i>
        Novo Tipo
      <% end %>
    </div>
  </div>

  <div class="equipment-types-grid">
    <% if @equipment_types.any? %>
      <% @equipment_types.each do |equipment_type| %>
        <div class="equipment-type-card" style="<%= equipment_type.css_style %>">
          <div class="card-header">
            <div class="type-icon">
              <i class="<%= equipment_type.icon_class %>"></i>
            </div>
            <div class="type-info">
              <h3><%= equipment_type.name %></h3>
              <p><%= equipment_type.description %></p>
            </div>
            <div class="type-status">
              <% if equipment_type.active? %>
                <span class="status-badge active">Ativo</span>
              <% else %>
                <span class="status-badge inactive">Inativo</span>
              <% end %>
            </div>
          </div>

          <div class="card-stats">
            <div class="stat">
              <span class="stat-number"><%= equipment_type.equipment_count %></span>
              <span class="stat-label">Equipamentos</span>
            </div>
            <div class="stat">
              <span class="stat-number"><%= equipment_type.feature_count %></span>
              <span class="stat-label">Caracter√≠sticas</span>
            </div>
          </div>

          <div class="card-actions">
            <%= link_to equipment_type_path(equipment_type), class: "btn btn-sm btn-outline" do %>
              <i class="fas fa-eye"></i>
              Ver Detalhes
            <% end %>
            
            <%= link_to equipment_type_equipment_features_path(equipment_type), class: "btn btn-sm btn-outline" do %>
              <i class="fas fa-cog"></i>
              Caracter√≠sticas
            <% end %>
            
            <%= link_to edit_equipment_type_path(equipment_type), class: "btn btn-sm btn-outline" do %>
              <i class="fas fa-edit"></i>
              Editar
            <% end %>
            
            <%= link_to equipment_type_path(equipment_type), 
                method: :delete, 
                data: { confirm: "Tem certeza que deseja excluir este tipo de equipamento?" },
                class: "btn btn-sm btn-danger" do %>
              <i class="fas fa-trash"></i>
              Excluir
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">üè∑Ô∏è</div>
        <h3>Nenhum tipo de equipamento cadastrado</h3>
        <p>Comece criando o primeiro tipo de equipamento para o seu sistema.</p>
        <%= link_to new_equipment_type_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i>
          Criar Primeiro Tipo
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
