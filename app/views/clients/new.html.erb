<div class="content-header">
  <h1 class="page-title">Novo Cliente</h1>
  <p class="page-subtitle">Cadastre um novo cliente no sistema</p>
</div>

<div class="card">
  <%= form_with model: @client, local: true do |form| %>
    <% if @client.errors.any? %>
      <div class="alert alert-danger">
        <h3><%= pluralize(@client.errors.count, "erro") %> impediram o cadastro:</h3>
        <ul>
          <% @client.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, 'Nome Completo', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Digite o nome completo do cliente' %>
    </div>

    <div class="form-group">
      <%= form.label :email, 'Email', class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control', placeholder: 'exemplo@email.com' %>
    </div>

    <div class="form-group">
      <%= form.label :phone, 'Telefone', class: 'form-label' %>
      <%= form.telephone_field :phone, class: 'form-control', placeholder: '(11) 99999-9999' %>
    </div>

    <div class="form-group">
      <%= form.label :cpf_cnpj, 'CPF/CNPJ', class: 'form-label' %>
      <%= form.text_field :cpf_cnpj, class: 'form-control', placeholder: '000.000.000-00 ou 00.000.000/0000-00' %>
    </div>

    <div class="form-group">
      <%= form.label :address, 'Endereço', class: 'form-label' %>
      <%= form.text_area :address, class: 'form-control', rows: 3, placeholder: 'Digite o endereço completo' %>
    </div>

    <div style="display: flex; gap: 12px; margin-top: 24px;">
      <%= form.submit 'Cadastrar Cliente', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', clients_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
